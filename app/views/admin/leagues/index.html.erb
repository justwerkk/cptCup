<h1>Listing Leagues</h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th></th>
    <th></th>
  </tr>

<% @leagues.each do |league| %>
  <tr>
    <td><%= league.id %></td>
    <td><%= league.name %></td>
    <td><%= league.start_date ? league.start_date.to_formatted_s : "none" %></td>
    <td><%= league.end_date ? league.end_date.to_formatted_s : "none" %></td>
    <td><%= link_to 'Edit', edit_admin_league_path(league) %></td>
    <td><%= link_to 'Destroy', [:admin, league], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

