<% content_for :head do %>
<style>
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  ul li {
    position: relative;
  }
  #leader-board {
    position: absolute;
    left: 300px;
    top: 4em;
  }
  .experimental {
    position: relative;
    float:right;
    padding-right: 1em;
  }
  .experimental sup {
    color: red;
    font-weight: bold;
    -moz-transform: rotate(-27deg);
    -webkit-transform: rotate(-27deg);
    display: block;
    left: -1em;
    position: absolute;
    top: -0.7em;
    font-size: 0.538em;
  }
</style>
<% end %>

<h1>Canuto Tacderan Cup</h1>

<h4>Select A League</h4>
<ul>
<% @leagues.each do |league| %>
<li><%= link_to league.name, league_path(league) %> (started on <%= league.start_date.strftime("%Y-%m-%d") %> | <%= pluralize(league.games.count, "game") %> played )</li>
<% end %>
</ul>

<h4>Create an Athlete</h4>
<%= render 'players/form' %>

<a href="<%= players_path %>">List all athletes</a>
