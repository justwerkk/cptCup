<h1>Listing games</h1>

<table>
  <tr>
    <th>League
    <th>Player one
    <th>Player two
    <th>Player three
    <th>Player four
    <th>Winning team
    <th>Cups left
    <th>Date
    <th>

<% @games.each do |game| %>
  <tr>
    <td><%= @league.name %>
    <td><%= game.player_one.name %>
    <td><%= game.player_two.name %>
    <td><%= game.player_three.name %>
    <td><%= game.player_four.name %>
    <td><%= winner_string(game) %>
    <td><%= game.cups_left %>
    <td><%= game.created_at.strftime("%Y-%m-%d") %>
    <td><%= link_to 'Edit', edit_league_game_path(@league, game) %>
<% end %>
</table>

<br>

<%= link_to 'New Game', new_league_game_path %>
