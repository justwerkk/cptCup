<h1>Listing games</h1>

<table>
  <tr>
    <th>Playeronewinner</th>
    <th>Playertwowinner</th>
    <th>Playeroneloser</th>
    <th>Playertwoloser</th>
    <th>Cupsleft</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.playerOneWinner %></td>
    <td><%= game.playerTwoWinner %></td>
    <td><%= game.playerOneLoser %></td>
    <td><%= game.playerTwoLoser %></td>
    <td><%= game.cupsLeft %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

