    <div class="cup">7</div>
    <div class="cup">8</div>
    <div class="cup">9</div>
    <div class="cup">10</div>
  </div>
  <div class="row">
    <div class="cup">4</div>
    <div class="cup">5</div>
    <div class="cup">6</div>
  </div>
  <div class="row">
    <div class="cup">2</div>
    <div class="cup">3</div>
  </div>
  <div class="row">
    <div class="cup">1</div>
  </div>
</div>

<div class="rack">
  <div class="row">
    <div class="cup">1</div>
  </div>
  <div class="row">
    <div class="cup">3</div>
    <div class="cup">2</div>
  </div>
  <div class="row">
    <div class="cup">6</div>
    <div class="cup">5</div>
    <div class="cup">4</div>
  </div>
  <div class="row">
    <div class="cup">10</div>
    <div class="cup">9</div>
    <div class="cup">8</div>
    <div class="cup">7</div>
  </div>
</div>

<div class="team">
  <div class="player"><%= @game.player_three.name %></div>
  <div class="player"><%= @game.player_four.name %></div>
  <h1>Team 2</h1>
</div>
</div>
