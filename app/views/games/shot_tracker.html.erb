<% content_for :head do %>
<style>
  div.game {
    text-align: center;
  }
  div.rack {
    margin-bottom: 50px;
  }

  div.row {
    width: 100%;
    text-align: center;
  }

  div.cup {
    width: 50px;
    height: 50px;
    line-height: 50px;
    -webkit-border-radius: 25px;
    -moz-border-radius: 25px;
    background-color: red;
    text-align: center;
    font-weight: bold;
    color: #fff;
    display: inline-block;
  }
</style>
<% end %>

<div class="game">
